<ul class="nav nav-tabs">
  <li class="active"><a>ログイン</a></li>
  <li><%= link_to '新規会員登録', new_user_registration_path %></li>
  <li><%= link_to 'パスワード再発行', new_user_password_path %></li>
</ul>
<p class="top15">ログイン情報を入力してください。</p>
<div class="col-xs-12">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <div class="col-md-6">
    <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'メールアドレス' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-6">
    <%= f.password_field :password, :class => 'form-control', :placeholder => 'パスワード'  %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-md-6">
        <%= f.check_box :remember_me %> <%= f.label :remember_me, 'ログイン情報を記憶する' %>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-md-6">
      <%= f.submit "ログイン", :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>

<hr class="col-xs-11">
</div>
<%= render "devise/shared/links" %>