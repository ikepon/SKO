              <% if user_signed_in? %>
                <div id="check" class="col-xs-2">
                  <% if @learning.present? && @learning.check == true %>
                    <%= form_for @learning, remote: true do |f| %>
                      <%= f.hidden_field :check, :value => 'false' %>
                      <%= f.submit 'チェック済み', :class => "btn btn-warning btn-sm lesson_check", :style => 'width: 90px;' %>
                    <% end %>
                  <% else %>
                    <%= form_for @learning, remote: true do |f| %>
                      <%= f.hidden_field :check, :value => 'true' %>
                      <%= f.submit 'チェックする', :class => "btn btn-info btn-sm lesson_check", :style => 'width: 90px;' %>
                    <% end %>
                  <% end %>
                </div>
              <% end %>