          <div class="row">
            <% @lesson_info.each do |lesson| %>
              <div class="col-xs-10">
                <h2><%= lesson.title %></h2>
              </div>
              <% if user_signed_in? %>
                <div class="col-xs-2">
                  <form class="form-horizontal">
                    <div class="form-group">
                      <div class="col-xs-offset-4 col-xs-8">
                        <div class="checkbox">
                          <label>
                            <input type="checkbox" value="<%= lesson.id %>">★
                          </label>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              <% end %>
              <div class="col-xs-12">
                <p><%= lesson.summary %></p>
              </div>
              <div class="col-xs-12">
                <%= image_tag '640x360.png', :alt => 'lesson_movie', :class => 'img-responsive lesson_movie'%>
              </div>
              <div class="col-xs-12 movie_button">
                <div class="col-xs-4 lesson_pre">
                  <%= button_tag '前へ', :class => 'btn btn-default', :onclick => "location.href='/'", :style => 'width: 80px;' %>
                </div>
                <div class="col-xs-4 lesson_movie">
                <% if user_signed_in? %>
                  <% if @learning.present? && @learning.status == true %>
                    <%= form_for @learning, remote: true do |f| %>
                      <%= f.hidden_field :status, :value => 'false' %>
                      <%= f.submit '完了済み', :class => "btn btn-default", :style => 'width: 80px;' %>
                    <% end %>
                  <% else %>
                    <%= form_for @learning, remote: true do |f| %>
                      <%= f.hidden_field :status, :value => 'true' %>
                      <%= f.submit '完了', :class => "btn btn-default", :style => 'width: 80px;' %>
                    <% end %>
                  <% end %>
                <% end %>
                </div>
                <div class="col-xs-4 lesson_next">
                  <%= button_tag '次へ', :class => 'btn btn-default', :onclick => "location.href='/'", :style => 'width: 80px;' %>
                </div>
              </div>
              <ul class="nav nav-tabs">
                <li class="active"><a href="#explanation" data-toggle="tab">解説</a></li>
                <li><a href="#exercise" data-toggle="tab">練習問題</a></li>
                <li><a href="#answer" data-toggle="tab">練習問題回答</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane active" id="explanation">
                  <p><%= raw(lesson.explanation) %></p>
                </div>
                <div class="tab-pane" id="exercise">
                  <p><%= raw(lesson.exercise) %></p>
                </div>
                <div class="tab-pane" id="answer">
                  <p><%= raw(lesson.exercise_answer) %></p>
                </div>
              </div>
              <hr>
              <h3>要点・まとめ</h3>
              <p><%= raw(lesson.point) %></p>
              <% if user_signed_in? %>
                <h3>学習メモ</h3>
                <%= form_for @learning, remote: true do |f| %>
                  <fieldset>
                    <div class="form-group">
                      <label for="exampleInput">レッスン内容などについて気になることを記入してください。</label>
                      <%= f.text_area :memo, :class =>  "form-control", :placeholder => "メモ", :style => "height: 120px;", :value => @learning.memo %>
                    </div>
                    <%= f.submit 'メモを残す', :class => "btn btn-default" %>
                  </fieldset>
                <% end %>
              <% end %>
            <% end %>
          </div>