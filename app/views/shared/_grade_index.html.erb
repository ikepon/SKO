                <div class="row">
                  <div class="col-xs-12">
                    <h2><%= @grade %></h2>
                    <%= image_tag '740x320.png', :alt => 'Main_Visual', :class => 'img-responsive bottom20'%>
                  </div>
                  <div class="col-md-6">
                    <% if @grade_units.present? %>
                      <% @grade_units.each do |unit| %>
                        <h3 id="<%= unit.unit_name %>"><%= unit.unit_name %></h3>
                        <ul>
                        <% @grade_units_all.each do |item| %>
                          <% if item.unit_name == unit.unit_name %>
                            <li><%= link_to item.unit_item_name, item.unit_item_name %></li>
                          <% end %>
                        <% end %>
                        </ul>
                      <% end %>
                    <% else %>
                      <ul>
                        <li>準備中です</li>
                      </ul>
                    <% end %>
                  </div>
                  <div class="col-md-6">
                    <h3>関数</h3>
                    <ul>
                      <li>関数</li>
                      <li>比例</li>
                      <li>反比例</li>
                      <li>座標</li>
                      <li>比例グラフ</li>
                      <li>反比例グラフ</li>
                    </ul>
                    <h3>図形</h3>
                    <ul>
                      <li>図形（用語と記号）</li>
                      <li>図形の移動</li>
                      <li>作図</li>
                      <li>円とおうぎ形</li>
                      <li>おうぎ形の弧、面積</li>
                    </ul>
                    <h3>資料</h3>
                    <ul>
                      <li>近似値</li>
                    </ul>
                  </div>
                </div>
